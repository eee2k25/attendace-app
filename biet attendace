                <button onclick="closeModal('addStudentModal')" class="w-8 h-8 rounded-lg hover:bg-white/10 flex items-center justify-center">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form onsubmit="addStudent(event)" class="space-y-4">
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Roll Number</label>
                    <input type="text" id="studentRoll" required placeholder="e.g., 21CS101" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Student Name</label>
                    <input type="text" id="studentName" required placeholder="e.g., John Doe" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Class</label>
                    <select id="studentClass" required class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <option value="">Select Class</option>
                    </select>
                </div>
                <button type="submit" class="w-full btn-gradient py-3 rounded-xl font-medium">
                    <i class="fas fa-user-plus mr-2"></i>Add Student
                </button>
            </form>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-6 right-6 z-50 hidden">
        <div class="glass rounded-xl px-6 py-4 flex items-center gap-3 slide-in">
            <i id="toastIcon" class="fas fa-check-circle text-green-400 text-xl"></i>
            <span id="toastMessage">Operation successful!</span>
        </div>
    </div>

    <script>
        // Data Store
        let appData = {
            students: [],
            classes: [],
            timetable: [],
            attendanceRecords: [],
            defaultStatus: 'present',
            currentAttendance: {}
        };

        // Load data from localStorage
        function loadData() {
            const saved = localStorage.getItem('attendEaseData');
            if (saved) {
                appData = JSON.parse(saved);
            }
            updateUI();
        }

        // Save data to localStorage
        function saveData() {
            localStorage.setItem('attendEaseData', JSON.stringify(appData));
        }

        // Update DateTime
        function updateDateTime() {
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' };
            document.getElementById('currentDateTime').textContent = now.toLocaleDateString('en-US', options);
        }
        setInterval(updateDateTime, 1000);
        updateDateTime();

        // Tab Navigation
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.add('hidden'));
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('tab-active');
                btn.classList.add('hover:bg-white/10');
            });
            
            document.getElementById(tabId).classList.remove('hidden');
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('tab-active');
            document.querySelector(`[data-tab="${tabId}"]`).classList.remove('hover:bg-white/10');

            if (tabId === 'attendance') updateAttendanceTab();
            if (tabId === 'students') updateStudentsTab();
            if (tabId === 'history') updateHistoryTab();
        }

        // Modal Functions
        function showAddClassModal() {
            document.getElementById('addClassModal').classList.remove('hidden');
            document.getElementById('addClassModal').classList.add('flex');
        }

        function showAddStudentModal() {
            updateClassDropdowns();
            document.getElementById('addStudentModal').classList.remove('hidden');
            document.getElementById('addStudentModal').classList.add('flex');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
            document.getElementById(modalId).classList.remove('flex');
        }

        // Toast Notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const icon = document.getElementById('toastIcon');
            const msg = document.getElementById('toastMessage');
            
            msg.textContent = message;
            icon.className = type === 'success' ? 'fas fa-check-circle text-green-400 text-xl' : 'fas fa-exclamation-circle text-red-400 text-xl';
            
            toast.classList.remove('hidden');
            setTimeout(() => toast.classList.add('hidden'), 3000);
        }

        // Add Class
        function addClass(e) {
            e.preventDefault();
            const newClass = {
                id: Date.now(),
                name: document.getElementById('className').value,
                subject: document.getElementById('subjectName').value,
                startTime: document.getElementById('startTime').value,
                endTime: document.getElementById('endTime').value,
                lecturer: document.getElementById('classLecturer').value,
                day: document.getElementById('classDay').value
            };
            
            appData.timetable.push(newClass);
            if (!appData.classes.includes(newClass.name)) {
                appData.classes.push(newClass.name);
            }
            
            saveData();
            closeModal('addClassModal');
            updateTimetableGrid();
            updateClassDropdowns();
            showToast('Class added successfully!');
            e.target.reset();
        }

        // Add Student
        function addStudent(e) {
            e.preventDefault();
            const newStudent = {
                id: Date.now(),
                roll: document.getElementById('studentRoll').value,
                name: document.getElementById('studentName').value,
                class: document.getElementById('studentClass').value
            };
            
            appData.students.push(newStudent);
            saveData();
            closeModal('addStudentModal');
            updateStudentsTab();
            showToast('Student added successfully!');
            e.target.reset();
        }

        // Import Students from Excel
        function importStudents(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                const sheet = workbook.Sheets[workbook.SheetNames[0]];
                const json = XLSX.utils.sheet_to_json(sheet);

                json.forEach(row => {
                    const student = {
                        id: Date.now() + Math.random(),
                        roll: row['Roll Number'] || row['roll'] || row['Roll'] || '',
                        name: row['Name'] || row['name'] || row['Student Name'] || '',
                        class: row['Class'] || row['class'] || row['Section'] || ''
                    };
                    if (student.roll && student.name) {
                        appData.students.push(student);
                        if (student.class && !appData.classes.includes(student.class)) {
                            appData.classes.push(student.class);
                        }
                    }
                });

                saveData();
                updateStudentsTab();
                updateClassDropdowns();
                showToast(`Imported ${json.length} students successfully!`);
            };
            reader.readAsArrayBuffer(file);
            event.target.value = '';
        }

        // Import Timetable from Excel
        function importTimetable(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                const sheet = workbook.Sheets[workbook.SheetNames[0]];
                const json = XLSX.utils.sheet_to_json(sheet);

                json.forEach(row => {
                    const classItem = {
                        id: Date.now() + Math.random(),
                        name: row['Class'] || row['class'] || '',
                        subject: row['Subject'] || row['subject'] || '',
                        startTime: row['Start Time'] || row['startTime'] || '',
                        endTime: row['End Time'] || row['endTime'] || '',
                        lecturer: row['Lecturer'] || row['lecturer'] || row['Teacher'] || '',
                        day: row['Day'] || row['day'] || ''
                    };
                    if (classItem.name && classItem.subject) {
                        appData.timetable.push(classItem);
                        if (!appData.classes.includes(classItem.name)) {
                            appData.classes.push(classItem.name);
                        }
                    }
                });

                saveData();
                updateTimetableGrid();
                updateClassDropdowns();
                showToast(`Imported ${json.length} classes successfully!`);
            };
            reader.readAsArrayBuffer(file);
            event.target.value = '';
        }

        // Update Class Dropdowns
        function updateClassDropdowns() {
            const dropdowns = ['attendanceClass', 'filterClass', 'studentClass', 'historyClass'];
            dropdowns.forEach(id => {
                const select = document.getElementById(id);
                if (select) {
                    const currentValue = select.value;
                    select.innerHTML = '<option value="">Select Class</option>';
                    appData.classes.forEach(cls => {
                        select.innerHTML += `<option value="${cls}">${cls}</option>`;
                    });
                    select.value = currentValue;
                }
            });
        }

        // Day Selection
        let selectedDay = 'Monday';
        function selectDay(day) {
            selectedDay = day;
            document.querySelectorAll('.day-btn').forEach(btn => {
                btn.classList.remove('bg-indigo-500');
                btn.classList.add('glass-dark', 'hover:bg-white/10');
            });
            document.querySelector(`[data-day="${day}"]`).classList.add('bg-indigo-500');
            document.querySelector(`[data-day="${day}"]`).classList.remove('glass-dark', 'hover:bg-white/10');
            updateTimetableGrid();
        }

        // Update Timetable Grid
        function updateTimetableGrid() {
            const grid = document.getElementById('timetableGrid');
            const dayClasses = appData.timetable.filter(c => c.day === selectedDay).sort((a, b) => a.startTime.localeCompare(b.startTime));

            if (dayClasses.length === 0) {
                grid.innerHTML = '<p class="text-gray-400 text-center py-8">No classes scheduled for this day.</p>';
                return;
            }

            grid.innerHTML = dayClasses.map(cls => `
                <div class="glass-dark rounded-xl p-4 flex items-center justify-between group">
                    <div class="flex items-center gap-4">
                        <div class="w-16 text-center">
                            <span class="text-lg font-bold text-indigo-400">${cls.startTime}</span>
                            <p class="text-xs text-gray-500">${cls.endTime}</p>
                        </div>
                        <div class="w-1 h-12 bg-gradient-to-b from-indigo-500 to-purple-500 rounded-full"></div>
                        <div>
                            <h4 class="font-semibold">${cls.subject}</h4>
                            <p class="text-sm text-gray-400">${cls.name} â€¢ ${cls.lecturer}</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition">
                        <button onclick="deleteClass(${cls.id})" class="w-8 h-8 rounded-lg hover:bg-red-500/20 flex items-center justify-center text-red-400">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `).join('');
        }

        // Delete Class
        function deleteClass(id) {
            appData.timetable = appData.timetable.filter(c => c.id !== id);
            saveData();
            updateTimetableGrid();
            showToast('Class deleted');
        }

        // Update Attendance Tab
        function updateAttendanceTab() {
            updateClassDropdowns();
            const classSelect = document.getElementById('attendanceClass');
            classSelect.onchange = loadStudentsForAttendance;

            // Load subjects based on timetable
            const subjectSelect = document.getElementById('attendanceSubject');
            subjectSelect.innerHTML = '<option value="">Choose subject</option>';
            const uniqueSubjects = [...new Set(appData.timetable.map(t => t.subject))];
            uniqueSubjects.forEach(sub => {
                subjectSelect.innerHTML += `<option value="${sub}">${sub}</option>`;
            });
        }

        // Load Students for Attendance
        function loadStudentsForAttendance() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const list = document.getElementById('attendanceList');
            
            if (!selectedClass) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8">Select a class to view students</p>';
                return;
            }

            const students = appData.students.filter(s => s.class === selectedClass);
            
            if (students.length === 0) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8">No students in this class</p>';
                return;
            }

            // Initialize attendance
            students.forEach(s => {
                if (appData.currentAttendance[s.id] === undefined) {
                    appData.currentAttendance[s.id] = appData.defaultStatus === 'present';
                }
            });

            renderAttendanceList(students);
        }

        // Render Attendance List
        function renderAttendanceList(students) {
            const list = document.getElementById('attendanceList');
            list.innerHTML = students.map(student => {
                const isPresent = appData.currentAttendance[student.id];
                return `
                    <div class="student-card glass-dark rounded-xl p-4 flex items-center justify-between ${isPresent ? 'present' : 'absent'}" data-id="${student.id}">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center font-bold">
                                ${student.name.charAt(0)}
                            </div>
                            <div>
                                <h4 class="font-medium">${student.name}</h4>
                                <p class="text-sm text-gray-400">${student.roll}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="text-sm ${isPresent ? 'text-green-400' : 'text-red-400'}">${isPresent ? 'Present' : 'Absent'}</span>
                            <div class="toggle-switch ${isPresent ? 'active' : ''}" onclick="toggleAttendance(${student.id})"></div>
                        </div>
                    </div>
                `;
            }).join('');

            updateAttendanceSummary();
        }

        // Toggle Attendance
        function toggleAttendance(studentId) {
            appData.currentAttendance[studentId] = !appData.currentAttendance[studentId];
            loadStudentsForAttendance();
        }

        // Mark All Present/Absent
        function markAllPresent() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const students = appData.students.filter(s => s.class === selectedClass);
            students.forEach(s => appData.currentAttendance[s.id] = true);
            loadStudentsForAttendance();
        }

        function markAllAbsent() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const students = appData.students.filter(s => s.class === selectedClass);
            students.forEach(s => appData.currentAttendance[s.id] = false);
            loadStudentsForAttendance();
        }

        // Set Default Status
        function setDefaultStatus(status) {
            appData.defaultStatus = status;
            if (status === 'present') {
                document.getElementById('defaultPresent').className = 'px-3 py-1 rounded-lg text-sm btn-success text-white';
                document.getElementById('defaultAbsent').className = 'px-3 py-1 rounded-lg text-sm bg-gray-600 text-white';
            } else {
                document.getElementById('defaultAbsent').className = 'px-3 py-1 rounded-lg text-sm btn-danger text-white';
                document.getElementById('defaultPresent').className = 'px-3 py-1 rounded-lg text-sm bg-gray-600 text-white';
            }
        }

        // Update Attendance Summary
        function updateAttendanceSummary() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const students = appData.students.filter(s => s.class === selectedClass);
            const present = students.filter(s => appData.currentAttendance[s.id]).length;
            const absent = students.length - present;
            
            document.getElementById('attendanceSummary').innerHTML = `
                <span class="text-green-400"><i class="fas fa-check-circle mr-1"></i>${present} Present</span>
                <span class="mx-3">|</span>
                <span class="text-red-400"><i class="fas fa-times-circle mr-1"></i>${absent} Absent</span>
                <span class="mx-3">|</span>
                <span class="text-gray-300">Total: ${students.length}</span>
            `;
        }

        // Submit Attendance
        function submitAttendance() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const subject = document.getElementById('attendanceSubject').value;
            const lecturer = document.getElementById('lecturerName').value;

            if (!selectedClass || !subject) {
                showToast('Please select class and subject', 'error');
                return;
            }

            const students = appData.students.filter(s => s.class === selectedClass);
            const presentStudents = students.filter(s => appData.currentAttendance[s.id]);
            const absentStudents = students.filter(s => !appData.currentAttendance[s.id]);

            const record = {
                id: Date.now(),
                date: new Date().toISOString(),
                class: selectedClass,
                subject: subject,
                lecturer: lecturer,
                totalStudents: students.length,
                presentCount: presentStudents.length,
                absentCount: absentStudents.length,
                presentList: presentStudents.map(s => ({ roll: s.roll, name: s.name })),
                absentList: absentStudents.map(s => ({ roll: s.roll, name: s.name }))
            };

            appData.attendanceRecords.push(record);
            appData.currentAttendance = {};
            saveData();
            updateUI();
            showToast('Attendance saved successfully!');
        }

        // Share to WhatsApp
        function shareToWhatsApp() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const subject = document.getElementById('attendanceSubject').value;
            const lecturer = document.getElementById('lecturerName').value;

            if (!selectedClass || !subject) {
                showToast('Please select class and subject', 'error');
                return;
            }

            const students = appData.students.filter(s => s.class === selectedClass);
            const presentStudents = students.filter(s => appData.currentAttendance[s.id]);
            const absentStudents = students.filter(s => !appData.currentAttendance[s.id]);

            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
            const dateStr = now.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });

            let message = `ðŸ“‹ *ATTENDANCE REPORT*\n`;
            message += `â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n\n`;
            message += `ðŸ“… *Date:* ${dateStr}\n`;
            message += `â° *Time:* ${timeStr}\n`;
            message += `ðŸ« *Class:* ${selectedClass}\n`;
            message += `ðŸ“š *Subject:* ${subject}\n`;
            message += `ðŸ‘¨â€ðŸ« *Lecturer:* ${lecturer || 'N/A'}\n\n`;
            message += `â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n`;
            message += `ðŸ“Š *SUMMARY*\n`;
            message += `â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n\n`;
            message += `âœ… Present: ${presentStudents.length}\n`;
            message += `âŒ Absent: ${absentStudents.length}\n`;
            message += `ðŸ“ Total: ${students.length}\n`;
            message += `ðŸ“ˆ Attendance: ${((presentStudents.length / students.length) * 100).toFixed(1)}%\n\n`;

            if (absentStudents.length > 0) {
                message += `â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n`;
                message += `âŒ *ABSENTEES*\n`;
                message += `â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n\n`;
                absentStudents.forEach((s, i) => {
                    message += `${i + 1}. ${s.roll} - ${s.name}\n`;
                });
            }

            message += `\n_Generated by AttendEase_`;

            const encodedMessage = encodeURIComponent(message);
            window.open(`https://wa.me/?text=${encodedMessage}`, '_blank');
        }

        // Update Students Tab
        function updateStudentsTab() {
            updateClassDropdowns();
            filterStudents();
        }

        // Filter Students
        function filterStudents() {
            const classFilter = document.getElementById('filterClass').value;
            const searchTerm = document.getElementById('searchStudentList').value.toLowerCase();

            let filtered = appData.students;
            if (classFilter) {
                filtered = filtered.filter(s => s.class === classFilter);
            }
            if (searchTerm) {
                filtered = filtered.filter(s => 
                    s.name.toLowerCase().includes(searchTerm) || 
                    s.roll.toLowerCase().includes(searchTerm)
                );
            }

            const list = document.getElementById('studentsList');
            if (filtered.length === 0) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8 col-span-full">No students found</p>';
                return;
            }

            list.innerHTML = filtered.map(student => `
                <div class="glass-dark rounded-xl p-4 group">
                    <div class="flex items-center justify-between mb-3">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center font-bold text-lg">
                            ${student.name.charAt(0)}
                        </div>
                        <button onclick="deleteStudent(${student.id})" class="w-8 h-8 rounded-lg hover:bg-red-500/20 flex items-center justify-center text-red-400 opacity-0 group-hover:opacity-100 transition">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <h4 class="font-semibold">${student.name}</h4>
                    <p class="text-sm text-gray-400">${student.roll}</p>
                    <span class="inline-block mt-2 px-3 py-1 rounded-full text-xs bg-indigo-500/20 text-indigo-300">${student.class}</span>
                </div>
            `).join('');
        }

        // Delete Student
        function deleteStudent(id) {
            appData.students = appData.students.filter(s => s.id !== id);
            saveData();
            filterStudents();
            showToast('Student removed');
        }

        // Update History Tab
        function updateHistoryTab() {
            updateClassDropdowns();
            const list = document.getElementById('historyList');
            
            if (appData.attendanceRecords.length === 0) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8">No attendance records found.</p>';
                return;
            }

            const sorted = [...appData.attendanceRecords].reverse();
            list.innerHTML = sorted.map(record => {
                const date = new Date(record.date);
                const percentage = ((record.presentCount / record.totalStudents) * 100).toFixed(1);
                
                return `
                    <div class="glass-dark rounded-xl p-4">
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                            <div>
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="text-lg font-semibold">${record.subject}</span>
                                    <span class="px-2 py-1 rounded-lg text-xs bg-indigo-500/20 text-indigo-300">${record.class}</span>
                                </div>
                                <p class="text-sm text-gray-400">
                                    <i class="fas fa-calendar mr-1"></i>${date.toLocaleDateString()}
                                    <span class="mx-2">â€¢</span>
                                    <i class="fas fa-clock mr-1"></i>${date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' })}
                                    <span class="mx-2">â€¢</span>
                                    <i class="fas fa-user mr-1"></i>${record.lecturer || 'N/A'}
                                </p>
                            </div>
                            <div class="flex items-center gap-4">
                                <div class="text-center">
                                    <span class="text-2xl font-bold text-green-400">${record.presentCount}</span>
                                    <p class="text-xs text-gray-400">Present</p>
                                </div>
                                <div class="text-center">
                                    <span class="text-2xl font-bold text-red-400">${record.absentCount}</span>
                                    <p class="text-xs text-gray-400">Absent</p>
                                </div>
                                <div class="w-16 h-16 rounded-full border-4 ${percentage >= 75 ? 'border-green-500' : 'border-red-500'} flex items-center justify-center">
                                    <span class="text-sm font-bold">${percentage}%</span>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Update UI
        function updateUI() {
            // Dashboard stats
            document.getElementById('totalStudents').textContent = appData.students.length;
            
            const today = new Date().toDateString();
            const todayRecords = appData.attendanceRecords.filter(r => new Date(r.date).toDateString() === today);
            
            let todayPresent = 0, todayAbsent = 0;
            todayRecords.forEach(r => {
                todayPresent += r.presentCount;
                todayAbsent += r.absentCount;
            });
            
            document.getElementById('todayPresent').textContent = todayPresent;
            document.getElementById('todayAbsent').textContent = todayAbsent;

            // Today's classes
            const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            const todayDay = days[new Date().getDay()];
            const todayClasses = appData.timetable.filter(c => c.day === todayDay);
            document.getElementById('totalClasses').textContent = todayClasses.length;

            // Current class card
            updateCurrentClassCard(todayClasses);

            updateClassDropdowns();
            updateTimetableGrid();
        }

        // Update Current Class Card
        function updateCurrentClassCard(todayClasses) {
            const card = document.getElementById('currentClassCard');
            if (todayClasses.length === 0) {
                card.innerHTML = '<p class="text-gray-400">No classes scheduled for today.</p>';
                return;
            }

            const now = new Date();
            const currentTime = now.getHours() * 60 + now.getMinutes();

            let currentClass = null;
            let nextClass = null;

            for (const cls of todayClasses.sort((a, b) => a.startTime.localeCompare(b.startTime))) {
                const [startH, startM] = cls.startTime.split(':').map(Number);
                const [endH, endM] = cls.endTime.split(':').map(Number);
                const startMin = startH * 60 + startM;
                const endMin = endH * 60 + endM;

                if (currentTime >= startMin && currentTime < endMin) {
                    currentClass = cls;
                    break;
                } else if (currentTime < startMin && !nextClass) {
                    nextClass = cls;
                }
            }

            const displayClass = currentClass || nextClass;
            if (!displayClass) {
                card.innerHTML = '<p class="text-gray-400">All classes completed for today.</p>';
                return;
            }

            card.innerHTML = `
                <div class="flex items-center justify-between">
                    <div>
                        <span class="px-3 py-1 rounded-full text-xs ${currentClass ? 'bg-green-500/20 text-green-400' : 'bg-yellow-500/20 text-yellow-400'} mb-3 inline-block">
                            ${currentClass ? 'ðŸ”´ LIVE NOW' : 'â° UP NEXT'}
                        </span>
                        <h3 class="text-2xl font-bold mb-2">${displayClass.subject}</h3>
                        <p class="text-gray-400">
                            <i class="fas fa-users mr-1"></i>${displayClass.name}
                            <span class="mx-2">â€¢</span>
                            <i class="fas fa-user mr-1"></i>${displayClass.lecturer}
                        </p>
                    </div>
                    <div class="text-right">
                        <p class="text-3xl font-bold text-indigo-400">${displayClass.startTime}</p>
                        <p class="text-gray-400">to ${displayClass.endTime}</p>
                        <button onclick="showTab('attendance'); document.getElementById('attendanceClass').value='${displayClass.name}'; loadStudentsForAttendance();" class="mt-3 btn-gradient px-4 py-2 rounded-lg text-sm font-medium">
                            Take Attendance
                        </button>
                    </div>
                </div>
            `;
        }

        // Search in attendance
        document.getElementById('searchStudent')?.addEventListener('keyup', function() {
            const term = this.value.toLowerCase();
            document.querySelectorAll('.student-card').forEach(card => {
                const name = card.querySelector('h4').textContent.toLowerCase();
                const roll = card.querySelector('p').textContent.toLowerCase();
                card.style.display = (name.includes(term) || roll.includes(term)) ? 'flex' : 'none';
            });
        });

        // Initialize
        loadData();
    </script>
</body>
</html>
