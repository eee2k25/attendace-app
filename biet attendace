                    <div class="glass rounded-2xl p-6">
                        <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4 mb-6">
                            <div>
                                <h2 class="text-xl font-bold mb-1">Attendance History</h2>
                                <p class="text-gray-400 text-sm">View and export past attendance records</p>
                            </div>
                            <div class="flex gap-3">
                                <input type="date" id="historyDate" onchange="filterHistory()" class="glass-dark rounded-xl px-4 py-2 bg-transparent focus:outline-none">
                                <select id="historyClass" onchange="filterHistory()" class="glass-dark rounded-xl px-4 py-2 bg-transparent focus:outline-none">
                                    <option value="">All Classes</option>
                                </select>
                                <button onclick="clearHistory()" class="btn-danger px-4 py-2 rounded-xl text-sm">
                                    <i class="fas fa-trash mr-1"></i>Clear
                                </button>
                            </div>
                        </div>

                        <div id="historyList" class="space-y-4">
                            <p class="text-gray-400 text-center py-8">No attendance records found.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Add/Edit Class Modal -->
    <div id="addClassModal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 bg-black/50 backdrop-blur-sm">
        <div class="glass rounded-2xl p-6 w-full max-w-md slide-in modal-scroll">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-xl font-bold" id="classModalTitle">Add New Class</h3>
                <button onclick="closeModal('addClassModal')" class="w-8 h-8 rounded-lg hover:bg-white/10 flex items-center justify-center">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form onsubmit="saveClass(event)" class="space-y-4">
                <input type="hidden" id="editClassId" value="">
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Class Name</label>
                    <input type="text" id="className" required placeholder="e.g., CSE-A 3rd Year" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Subject</label>
                    <input type="text" id="subjectName" required placeholder="e.g., Data Structures" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm text-gray-400 mb-2">Start Time</label>
                        <input type="time" id="startTime" required class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-2">End Time</label>
                        <input type="time" id="endTime" required class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Lecturer</label>
                    <input type="text" id="classLecturer" required placeholder="e.g., Dr. Smith" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Day</label>
                    <select id="classDay" required class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                    </select>
                </div>
                <button type="submit" class="w-full btn-gradient py-3 rounded-xl font-medium">
                    <i class="fas fa-save mr-2"></i><span id="classSubmitText">Add Class</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Add/Edit Student Modal -->
    <div id="addStudentModal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 bg-black/50 backdrop-blur-sm">
        <div class="glass rounded-2xl p-6 w-full max-w-md slide-in modal-scroll">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-xl font-bold" id="studentModalTitle">Add New Student</h3>
                <button onclick="closeModal('addStudentModal')" class="w-8 h-8 rounded-lg hover:bg-white/10 flex items-center justify-center">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form onsubmit="saveStudent(event)" class="space-y-4">
                <input type="hidden" id="editStudentId" value="">
                <div>
                    <label class="block text-sm text-gray-400 mb-2">PIN Number</label>
                    <input type="text" id="studentPin" required placeholder="e.g., 001 or auto-generated" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Roll Number</label>
                    <input type="text" id="studentRoll" required placeholder="e.g., 21CS101" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Student Name</label>
                    <input type="text" id="studentName" required placeholder="e.g., John Doe" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label class="block text-sm text-gray-400 mb-2">Class</label>
                    <input type="text" id="studentClass" required placeholder="e.g., CSE-A" class="w-full glass-dark rounded-xl px-4 py-3 bg-transparent focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <button type="submit" class="w-full btn-gradient py-3 rounded-xl font-medium">
                    <i class="fas fa-save mr-2"></i><span id="studentSubmitText">Add Student</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Excel Preview Modal -->
    <div id="excelPreviewModal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 bg-black/50 backdrop-blur-sm">
        <div class="glass rounded-2xl p-6 w-full max-w-4xl slide-in modal-scroll">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h3 class="text-xl font-bold">Smart Import Preview</h3>
                    <p class="text-sm text-gray-400">We detected the following columns. Please verify mapping.</p>
                </div>
                <button onclick="closeModal('excelPreviewModal')" class="w-8 h-8 rounded-lg hover:bg-white/10 flex items-center justify-center">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div id="excelPreviewContent" class="mb-6"></div>
            <div class="flex justify-end gap-3">
                <button onclick="closeModal('excelPreviewModal')" class="glass-dark px-6 py-3 rounded-xl font-medium hover:bg-white/10">Cancel</button>
                <button onclick="confirmImport()" class="btn-gradient px-6 py-3 rounded-xl font-medium">
                    <i class="fas fa-check mr-2"></i>Confirm Import
                </button>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-6 right-6 z-50 hidden">
        <div class="glass rounded-xl px-6 py-4 flex items-center gap-3 slide-in">
            <i id="toastIcon" class="fas fa-check-circle text-green-400 text-xl"></i>
            <span id="toastMessage">Operation successful!</span>
        </div>
    </div>

    <script>
        // Data Store
        let appData = {
            students: [],
            classes: [],
            timetable: [],
            attendanceRecords: [],
            currentAttendance: {},
            selectionMode: 'present'
        };

        let pendingImport = { type: '', data: [], mapping: {} };

        // Load/Save Data
        function loadData() {
            const saved = localStorage.getItem('attendEaseData');
            if (saved) appData = JSON.parse(saved);
            updateUI();
        }

        function saveData() {
            localStorage.setItem('attendEaseData', JSON.stringify(appData));
        }

        // DateTime Update
        function updateDateTime() {
            const now = new Date();
            document.getElementById('currentDateTime').textContent = now.toLocaleDateString('en-US', { 
                weekday: 'short', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' 
            });
        }
        setInterval(updateDateTime, 1000);
        updateDateTime();

        // Tab Navigation
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.add('hidden'));
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('tab-active');
                btn.classList.add('hover:bg-white/10');
            });
            document.getElementById(tabId).classList.remove('hidden');
            document.querySelector(`[data-tab="${tabId}"]`).classList.add('tab-active');
            document.querySelector(`[data-tab="${tabId}"]`).classList.remove('hover:bg-white/10');

            if (tabId === 'attendance') updateAttendanceTab();
            if (tabId === 'students') updateStudentsTab();
            if (tabId === 'history') updateHistoryTab();
            if (tabId === 'timetable') updateTimetableGrid();
        }

        // Modal Functions
        function showAddClassModal(editId = null) {
            document.getElementById('editClassId').value = editId || '';
            document.getElementById('classModalTitle').textContent = editId ? 'Edit Class' : 'Add New Class';
            document.getElementById('classSubmitText').textContent = editId ? 'Save Changes' : 'Add Class';
            
            if (editId) {
                const cls = appData.timetable.find(c => c.id == editId);
                if (cls) {
                    document.getElementById('className').value = cls.name;
                    document.getElementById('subjectName').value = cls.subject;
                    document.getElementById('startTime').value = cls.startTime;
                    document.getElementById('endTime').value = cls.endTime;
                    document.getElementById('classLecturer').value = cls.lecturer;
                    document.getElementById('classDay').value = cls.day;
                }
            } else {
                document.getElementById('className').value = '';
                document.getElementById('subjectName').value = '';
                document.getElementById('startTime').value = '';
                document.getElementById('endTime').value = '';
                document.getElementById('classLecturer').value = '';
            }
            
            document.getElementById('addClassModal').classList.remove('hidden');
            document.getElementById('addClassModal').classList.add('flex');
        }

        function showAddStudentModal(editId = null) {
            document.getElementById('editStudentId').value = editId || '';
            document.getElementById('studentModalTitle').textContent = editId ? 'Edit Student' : 'Add New Student';
            document.getElementById('studentSubmitText').textContent = editId ? 'Save Changes' : 'Add Student';
            
            if (editId) {
                const student = appData.students.find(s => s.id == editId);
                if (student) {
                    document.getElementById('studentPin').value = student.pin || '';
                    document.getElementById('studentRoll').value = student.roll;
                    document.getElementById('studentName').value = student.name;
                    document.getElementById('studentClass').value = student.class;
                }
            } else {
                const nextPin = String(appData.students.length + 1).padStart(3, '0');
                document.getElementById('studentPin').value = nextPin;
                document.getElementById('studentRoll').value = '';
                document.getElementById('studentName').value = '';
                document.getElementById('studentClass').value = '';
            }
            
            document.getElementById('addStudentModal').classList.remove('hidden');
            document.getElementById('addStudentModal').classList.add('flex');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
            document.getElementById(modalId).classList.remove('flex');
        }

        // Toast
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            document.getElementById('toastMessage').textContent = message;
            document.getElementById('toastIcon').className = type === 'success' 
                ? 'fas fa-check-circle text-green-400 text-xl' 
                : 'fas fa-exclamation-circle text-red-400 text-xl';
            toast.classList.remove('hidden');
            setTimeout(() => toast.classList.add('hidden'), 3000);
        }

        // Save Class (Add/Edit)
        function saveClass(e) {
            e.preventDefault();
            const editId = document.getElementById('editClassId').value;
            const classData = {
                id: editId ? parseInt(editId) : Date.now(),
                name: document.getElementById('className').value,
                subject: document.getElementById('subjectName').value,
                startTime: document.getElementById('startTime').value,
                endTime: document.getElementById('endTime').value,
                lecturer: document.getElementById('classLecturer').value,
                day: document.getElementById('classDay').value
            };
            
            if (editId) {
                const index = appData.timetable.findIndex(c => c.id == editId);
                if (index !== -1) appData.timetable[index] = classData;
            } else {
                appData.timetable.push(classData);
            }
            
            if (!appData.classes.includes(classData.name)) {
                appData.classes.push(classData.name);
            }
            
            saveData();
            closeModal('addClassModal');
            updateTimetableGrid();
            updateClassDropdowns();
            showToast(editId ? 'Class updated!' : 'Class added!');
        }

        // Save Student (Add/Edit)
        function saveStudent(e) {
            e.preventDefault();
            const editId = document.getElementById('editStudentId').value;
            const studentData = {
                id: editId ? parseInt(editId) : Date.now(),
                pin: document.getElementById('studentPin').value,
                roll: document.getElementById('studentRoll').value,
                name: document.getElementById('studentName').value,
                class: document.getElementById('studentClass').value
            };
            
            if (editId) {
                const index = appData.students.findIndex(s => s.id == editId);
                if (index !== -1) appData.students[index] = studentData;
            } else {
                appData.students.push(studentData);
            }
            
            if (!appData.classes.includes(studentData.class)) {
                appData.classes.push(studentData.class);
            }
            
            saveData();
            closeModal('addStudentModal');
            updateStudentsTab();
            updateClassDropdowns();
            showToast(editId ? 'Student updated!' : 'Student added!');
        }

        // Smart Import Students - Auto-detect columns
        function smartImportStudents(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                const sheet = workbook.Sheets[workbook.SheetNames[0]];
                const json = XLSX.utils.sheet_to_json(sheet);
                
                if (json.length === 0) {
                    showToast('No data found in Excel file', 'error');
                    return;
                }

                // Auto-detect column mappings
                const columns = Object.keys(json[0]);
                const mapping = autoDetectStudentColumns(columns);
                
                pendingImport = { type: 'students', data: json, mapping };
                showExcelPreview(json, mapping, 'students');
            };
            reader.readAsArrayBuffer(file);
            event.target.value = '';
        }

        function autoDetectStudentColumns(columns) {
            const mapping = { pin: '', roll: '', name: '', class: '' };
            const lowerColumns = columns.map(c => c.toLowerCase());
            
            // PIN detection
            const pinPatterns = ['pin', 'pin number', 'pinnumber', 'pin no', 'sno', 's.no', 'sl', 'sl.no', 'serial', '#', 'no', 'number'];
            for (let i = 0; i < columns.length; i++) {
                if (pinPatterns.some(p => lowerColumns[i].includes(p))) {
                    mapping.pin = columns[i];
                    break;
                }
            }
            
            // Roll number detection
            const rollPatterns = ['roll', 'rollno', 'roll number', 'rollnumber', 'reg', 'regno', 'registration', 'id', 'student id', 'usn', 'htno', 'hall ticket'];
            for (let i = 0; i < columns.length; i++) {
                if (rollPatterns.some(p => lowerColumns[i].includes(p))) {
                    mapping.roll = columns[i];
                    break;
                }
            }
            
            // Name detection
            const namePatterns = ['name', 'student name', 'studentname', 'full name', 'fullname'];
            for (let i = 0; i < columns.length; i++) {
                if (namePatterns.some(p => lowerColumns[i].includes(p))) {
                    mapping.name = columns[i];
                    break;
                }
            }
            
            // Class detection
            const classPatterns = ['class', 'section', 'batch', 'branch', 'department', 'dept', 'group', 'division'];
            for (let i = 0; i < columns.length; i++) {
                if (classPatterns.some(p => lowerColumns[i].includes(p))) {
                    mapping.class = columns[i];
                    break;
                }
            }
            
            return mapping;
        }

        // Smart Import Timetable
        function smartImportTimetable(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                const data = new Uint8Array(e.target.result);
                const workbook = XLSX.read(data, { type: 'array' });
                const sheet = workbook.Sheets[workbook.SheetNames[0]];
                const json = XLSX.utils.sheet_to_json(sheet);
                
                if (json.length === 0) {
                    showToast('No data found in Excel file', 'error');
                    return;
                }

                const columns = Object.keys(json[0]);
                const mapping = autoDetectTimetableColumns(columns);
                
                pendingImport = { type: 'timetable', data: json, mapping };
                showExcelPreview(json, mapping, 'timetable');
            };
            reader.readAsArrayBuffer(file);
            event.target.value = '';
        }

        function autoDetectTimetableColumns(columns) {
            const mapping = { name: '', subject: '', startTime: '', endTime: '', lecturer: '', day: '' };
            const lowerColumns = columns.map(c => c.toLowerCase());
            
            const patterns = {
                name: ['class', 'classname', 'class name', 'batch', 'section'],
                subject: ['subject', 'course', 'topic', 'paper'],
                startTime: ['start', 'start time', 'starttime', 'from', 'begin'],
                endTime: ['end', 'end time', 'endtime', 'to', 'finish'],
                lecturer: ['lecturer', 'teacher', 'faculty', 'professor', 'instructor', 'staff'],
                day: ['day', 'weekday', 'dayofweek']
            };
            
            for (const [field, pats] of Object.entries(patterns)) {
                for (let i = 0; i < columns.length; i++) {
                    if (pats.some(p => lowerColumns[i].includes(p))) {
                        mapping[field] = columns[i];
                        break;
                    }
                }
            }
            
            return mapping;
        }

        function showExcelPreview(data, mapping, type) {
            const preview = document.getElementById('excelPreviewContent');
            const columns = Object.keys(data[0]);
            const sampleData = data.slice(0, 5);
            
            let html = `
                <div class="mb-4">
                    <h4 class="font-semibold mb-2">Column Mapping (click to change):</h4>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
            `;
            
            const fields = type === 'students' 
                ? [{ key: 'pin', label: 'PIN' }, { key: 'roll', label: 'Roll Number' }, { key: 'name', label: 'Name' }, { key: 'class', label: 'Class' }]
                : [{ key: 'name', label: 'Class' }, { key: 'subject', label: 'Subject' }, { key: 'startTime', label: 'Start Time' }, { key: 'endTime', label: 'End Time' }, { key: 'lecturer', label: 'Lecturer' }, { key: 'day', label: 'Day' }];
            
            fields.forEach(field => {
                html += `
                    <div class="glass-dark rounded-lg p-3">
                        <label class="text-xs text-gray-400 block mb-1">${field.label}</label>
                        <select class="w-full bg-transparent text-sm focus:outline-none" onchange="updateMapping('${field.key}', this.value)">
                            <option value="">-- Select --</option>
                            ${columns.map(col => `<option value="${col}" ${mapping[field.key] === col ? 'selected' : ''}>${col}</option>`).join('')}
                        </select>
                    </div>
                `;
            });
            
            html += `</div></div>`;
            
            // Preview table
            html += `
                <div class="overflow-x-auto">
                    <h4 class="font-semibold mb-2">Preview (first 5 rows):</h4>
                    <table class="w-full text-sm">
                        <thead>
                            <tr class="border-b border-white/10">
                                ${columns.map(col => `<th class="p-2 text-left text-gray-400">${col}</th>`).join('')}
                            </tr>
                        </thead>
                        <tbody>
                            ${sampleData.map(row => `
                                <tr class="border-b border-white/5">
                                    ${columns.map(col => `<td class="p-2">${row[col] || '-'}</td>`).join('')}
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
                <p class="text-sm text-gray-400 mt-3"><i class="fas fa-info-circle mr-1"></i>Total rows to import: ${data.length}</p>
            `;
            
            preview.innerHTML = html;
            document.getElementById('excelPreviewModal').classList.remove('hidden');
            document.getElementById('excelPreviewModal').classList.add('flex');
        }

        function updateMapping(field, value) {
            pendingImport.mapping[field] = value;
        }

        function confirmImport() {
            const { type, data, mapping } = pendingImport;
            let imported = 0;
            
            if (type === 'students') {
                data.forEach((row, index) => {
                    const student = {
                        id: Date.now() + index,
                        pin: String(row[mapping.pin] || index + 1).padStart(3, '0'),
                        roll: String(row[mapping.roll] || ''),
                        name: String(row[mapping.name] || ''),
                        class: String(row[mapping.class] || 'Default')
                    };
                    
                    if (student.name) {
                        appData.students.push(student);
                        if (student.class && !appData.classes.includes(student.class)) {
                            appData.classes.push(student.class);
                        }
                        imported++;
                    }
                });
                
                // Sort by PIN
                appData.students.sort((a, b) => {
                    const pinA = parseInt(a.pin) || 0;
                    const pinB = parseInt(b.pin) || 0;
                    return pinA - pinB;
                });
                
                updateStudentsTab();
            } else if (type === 'timetable') {
                data.forEach((row, index) => {
                    const classItem = {
                        id: Date.now() + index,
                        name: String(row[mapping.name] || 'Default'),
                        subject: String(row[mapping.subject] || ''),
                        startTime: String(row[mapping.startTime] || ''),
                        endTime: String(row[mapping.endTime] || ''),
                        lecturer: String(row[mapping.lecturer] || ''),
                        day: String(row[mapping.day] || 'Monday')
                    };
                    
                    if (classItem.subject) {
                        appData.timetable.push(classItem);
                        if (classItem.name && !appData.classes.includes(classItem.name)) {
                            appData.classes.push(classItem.name);
                        }
                        imported++;
                    }
                });
                
                updateTimetableGrid();
            }
            
            saveData();
            updateClassDropdowns();
            closeModal('excelPreviewModal');
            showToast(`Imported ${imported} ${type === 'students' ? 'students' : 'classes'} successfully!`);
        }

        // Update Class Dropdowns
        function updateClassDropdowns() {
            const dropdowns = ['attendanceClass', 'filterClass', 'historyClass'];
            dropdowns.forEach(id => {
                const select = document.getElementById(id);
                if (select) {
                    const currentValue = select.value;
                    select.innerHTML = '<option value="">All Classes</option>';
                    appData.classes.forEach(cls => {
                        select.innerHTML += `<option value="${cls}">${cls}</option>`;
                    });
                    select.value = currentValue;
                }
            });
        }

        // Day Selection
        let selectedDay = 'Monday';
        function selectDay(day) {
            selectedDay = day;
            document.querySelectorAll('.day-btn').forEach(btn => {
                btn.classList.remove('bg-indigo-500');
                btn.classList.add('glass-dark', 'hover:bg-white/10');
            });
            document.querySelector(`[data-day="${day}"]`).classList.add('bg-indigo-500');
            document.querySelector(`[data-day="${day}"]`).classList.remove('glass-dark', 'hover:bg-white/10');
            updateTimetableGrid();
        }

        // Update Timetable Grid
        function updateTimetableGrid() {
            const grid = document.getElementById('timetableGrid');
            const dayClasses = appData.timetable.filter(c => c.day === selectedDay).sort((a, b) => (a.startTime || '').localeCompare(b.startTime || ''));

            if (dayClasses.length === 0) {
                grid.innerHTML = '<p class="text-gray-400 text-center py-8">No classes scheduled for this day.</p>';
                return;
            }

            grid.innerHTML = dayClasses.map(cls => `
                <div class="glass-dark rounded-xl p-4 flex items-center justify-between group hover:bg-white/5 transition">
                    <div class="flex items-center gap-4">
                        <div class="w-20 text-center">
                            <span class="text-lg font-bold text-indigo-400">${cls.startTime || '--:--'}</span>
                            <p class="text-xs text-gray-500">${cls.endTime || '--:--'}</p>
                        </div>
                        <div class="w-1 h-12 bg-gradient-to-b from-indigo-500 to-purple-500 rounded-full"></div>
                        <div>
                            <h4 class="font-semibold text-lg">${cls.subject}</h4>
                            <p class="text-sm text-gray-400">
                                <i class="fas fa-users mr-1"></i>${cls.name} 
                                <span class="mx-2"></span>
                                <i class="fas fa-user mr-1"></i>${cls.lecturer}
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center gap-2">
                        <button onclick="showAddClassModal(${cls.id})" class="w-10 h-10 rounded-lg hover:bg-indigo-500/20 flex items-center justify-center text-indigo-400 opacity-0 group-hover:opacity-100 transition">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button onclick="deleteClass(${cls.id})" class="w-10 h-10 rounded-lg hover:bg-red-500/20 flex items-center justify-center text-red-400 opacity-0 group-hover:opacity-100 transition">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function deleteClass(id) {
            if (confirm('Delete this class?')) {
                appData.timetable = appData.timetable.filter(c => c.id !== id);
                saveData();
                updateTimetableGrid();
                showToast('Class deleted');
            }
        }

        function clearTimetable() {
            if (confirm('Clear entire timetable?')) {
                appData.timetable = [];
                saveData();
                updateTimetableGrid();
                showToast('Timetable cleared');
            }
        }

        // Selection Mode for Attendance
        function setSelectionMode(mode) {
            appData.selectionMode = mode;
            document.getElementById('modePresent').classList.toggle('active', mode === 'present');
            document.getElementById('modeAbsent').classList.toggle('active', mode === 'absent');
        }

        // Update Attendance Tab
        function updateAttendanceTab() {
            updateClassDropdowns();
            const subjectSelect = document.getElementById('attendanceSubject');
            subjectSelect.innerHTML = '<option value="">Choose subject</option>';
            const uniqueSubjects = [...new Set(appData.timetable.map(t => t.subject))];
            uniqueSubjects.forEach(sub => {
                subjectSelect.innerHTML += `<option value="${sub}">${sub}</option>`;
            });
        }

        // Load Students for Attendance
        function loadStudentsForAttendance() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const list = document.getElementById('attendanceList');
            
            if (!selectedClass) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8">Select a class to view students</p>';
                updateAttendanceSummary([]);
                return;
            }

            let students = appData.students.filter(s => s.class === selectedClass);
            students.sort((a, b) => (parseInt(a.pin) || 0) - (parseInt(b.pin) || 0));
            
            if (students.length === 0) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8">No students in this class</p>';
                updateAttendanceSummary([]);
                return;
            }

            // Initialize attendance (default all present)
            students.forEach(s => {
                if (appData.currentAttendance[s.id] === undefined) {
                    appData.currentAttendance[s.id] = true;
                }
            });

            renderAttendanceList(students);
        }

        function renderAttendanceList(students) {
            const list = document.getElementById('attendanceList');
            list.innerHTML = students.map((student, index) => {
                const isPresent = appData.currentAttendance[student.id];
                return `
                    <div class="student-row glass-dark rounded-xl p-3 flex items-center gap-4 cursor-pointer ${isPresent ? 'present' : 'absent'}" 
                         data-id="${student.id}" onclick="toggleStudentAttendance(${student.id})">
                        <div class="w-8 text-center text-gray-400 font-mono">${index + 1}</div>
                        <div class="w-20 font-mono text-indigo-400 font-semibold">${student.pin || '-'}</div>
                        <div class="flex-1 font-medium">${student.name}</div>
                        <div class="w-32 text-gray-400 text-sm">${student.roll}</div>
                        <div class="w-32 flex justify-center gap-2">
                            <button onclick="event.stopPropagation(); setStudentStatus(${student.id}, true)" 
                                    class="status-btn present-btn ${isPresent ? 'active' : ''}">P</button>
                            <button onclick="event.stopPropagation(); setStudentStatus(${student.id}, false)" 
                                    class="status-btn absent-btn ${!isPresent ? 'active' : ''}">A</button>
                        </div>
                    </div>
                `;
            }).join('');
            updateAttendanceSummary(students);
        }

        function toggleStudentAttendance(studentId) {
            if (appData.selectionMode === 'present') {
                appData.currentAttendance[studentId] = true;
            } else {
                appData.currentAttendance[studentId] = false;
            }
            loadStudentsForAttendance();
        }

        function setStudentStatus(studentId, isPresent) {
            appData.currentAttendance[studentId] = isPresent;
            loadStudentsForAttendance();
        }

        function filterAttendanceList() {
            const term = document.getElementById('searchStudent').value.toLowerCase();
            document.querySelectorAll('.student-row').forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(term) ? 'flex' : 'none';
            });
        }

        function markAllPresent() {
            const selectedClass = document.getElementById('attendanceClass').value;
            appData.students.filter(s => s.class === selectedClass).forEach(s => {
                appData.currentAttendance[s.id] = true;
            });
            loadStudentsForAttendance();
        }

        function markAllAbsent() {
            const selectedClass = document.getElementById('attendanceClass').value;
            appData.students.filter(s => s.class === selectedClass).forEach(s => {
                appData.currentAttendance[s.id] = false;
            });
            loadStudentsForAttendance();
        }

        function resetAttendance() {
            appData.currentAttendance = {};
            loadStudentsForAttendance();
        }

        function updateAttendanceSummary(students) {
            const present = students.filter(s => appData.currentAttendance[s.id]).length;
            const absent = students.length - present;
            document.getElementById('presentCount').textContent = present;
            document.getElementById('absentCount').textContent = absent;
            document.getElementById('totalCount').textContent = students.length;
        }

        // Submit Attendance
        function submitAttendance() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const subject = document.getElementById('attendanceSubject').value;
            const hour = document.getElementById('attendanceHour').value;
            const lecturer = document.getElementById('lecturerName').value;

            if (!selectedClass || !subject) {
                showToast('Please select class and subject', 'error');
                return;
            }

            const students = appData.students.filter(s => s.class === selectedClass);
            const presentStudents = students.filter(s => appData.currentAttendance[s.id]);
            const absentStudents = students.filter(s => !appData.currentAttendance[s.id]);

            const record = {
                id: Date.now(),
                date: new Date().toISOString(),
                class: selectedClass,
                subject: subject,
                hour: hour,
                lecturer: lecturer,
                totalStudents: students.length,
                presentCount: presentStudents.length,
                absentCount: absentStudents.length,
                presentList: presentStudents.map(s => ({ pin: s.pin, roll: s.roll, name: s.name })),
                absentList: absentStudents.map(s => ({ pin: s.pin, roll: s.roll, name: s.name }))
            };

            appData.attendanceRecords.push(record);
            appData.currentAttendance = {};
            saveData();
            updateUI();
            showToast('Attendance saved successfully!');
        }

        // Share to WhatsApp
        function shareToWhatsApp() {
            const selectedClass = document.getElementById('attendanceClass').value;
            const subject = document.getElementById('attendanceSubject').value;
            const hour = document.getElementById('attendanceHour').value;
            const lecturer = document.getElementById('lecturerName').value;

            if (!selectedClass) {
                showToast('Please select a class', 'error');
                return;
            }

            const students = appData.students.filter(s => s.class === selectedClass);
            const presentStudents = students.filter(s => appData.currentAttendance[s.id]);
            const absentStudents = students.filter(s => !appData.currentAttendance[s.id]);

            const now = new Date();
            const dateStr = now.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
            const timeStr = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });

            let msg = ` *ATTENDANCE REPORT*\n`;
            msg += `\n\n`;
            msg += ` Date: ${dateStr}\n`;
            msg += ` Time: ${timeStr}\n`;
            msg += ` Class: ${selectedClass}\n`;
            msg += ` Subject: ${subject || 'N/A'}\n`;
            msg += ` Hour: ${hour || 'N/A'}\n`;
            msg += ` Lecturer: ${lecturer || 'N/A'}\n\n`;
            msg += `\n`;
            msg += ` *SUMMARY*\n`;
            msg += `\n\n`;
            msg += ` Present: ${presentStudents.length}\n`;
            msg += ` Absent: ${absentStudents.length}\n`;
            msg += ` Total: ${students.length}\n`;
            msg += ` Attendance: ${((presentStudents.length / students.length) * 100).toFixed(1)}%\n\n`;

            if (absentStudents.length > 0) {
                msg += `\n`;
                msg += ` *ABSENTEES*\n`;
                msg += `\n\n`;
                absentStudents.forEach((s, i) => {
                    msg += `${i + 1}. [${s.pin}] ${s.roll} - ${s.name}\n`;
                });
            }

            msg += `\n_Generated by AttendEase_`;
            window.open(`https://wa.me/?text=${encodeURIComponent(msg)}`, '_blank');
        }

        // Update Students Tab
        function updateStudentsTab() {
            updateClassDropdowns();
            filterStudents();
        }

        function filterStudents() {
            const classFilter = document.getElementById('filterClass').value;
            const searchTerm = document.getElementById('searchStudentList').value.toLowerCase();

            let filtered = appData.students;
            if (classFilter) filtered = filtered.filter(s => s.class === classFilter);
            if (searchTerm) {
                filtered = filtered.filter(s => 
                    s.name.toLowerCase().includes(searchTerm) || 
                    s.roll.toLowerCase().includes(searchTerm) ||
                    (s.pin || '').toLowerCase().includes(searchTerm)
                );
            }
            
            // Sort by PIN
            filtered.sort((a, b) => (parseInt(a.pin) || 0) - (parseInt(b.pin) || 0));

            const list = document.getElementById('studentsList');
            if (filtered.length === 0) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8">No students found</p>';
                return;
            }

            list.innerHTML = filtered.map(student => `
                <div class="glass-dark rounded-xl p-3 flex items-center gap-4 group hover:bg-white/5 transition">
                    <div class="w-12 text-center font-mono text-indigo-400 font-bold">${student.pin || '-'}</div>
                    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center font-bold text-lg">
                        ${student.name.charAt(0).toUpperCase()}
                    </div>
                    <div class="flex-1">
                        <h4 class="font-semibold">${student.name}</h4>
                    </div>
                    <div class="w-32 text-gray-400">${student.roll}</div>
                    <div class="w-24">
                        <span class="px-3 py-1 rounded-full text-xs bg-indigo-500/20 text-indigo-300">${student.class}</span>
                    </div>
                    <div class="w-24 flex justify-center gap-2">
                        <button onclick="showAddStudentModal(${student.id})" class="w-8 h-8 rounded-lg hover:bg-indigo-500/20 flex items-center justify-center text-indigo-400 opacity-0 group-hover:opacity-100 transition">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button onclick="deleteStudent(${student.id})" class="w-8 h-8 rounded-lg hover:bg-red-500/20 flex items-center justify-center text-red-400 opacity-0 group-hover:opacity-100 transition">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function deleteStudent(id) {
            if (confirm('Delete this student?')) {
                appData.students = appData.students.filter(s => s.id !== id);
                saveData();
                filterStudents();
                showToast('Student removed');
            }
        }

        function clearAllStudents() {
            if (confirm('Delete ALL students? This cannot be undone!')) {
                appData.students = [];
                saveData();
                filterStudents();
                updateUI();
                showToast('All students cleared');
            }
        }

        // Update History Tab
        function updateHistoryTab() {
            updateClassDropdowns();
            filterHistory();
        }

        function filterHistory() {
            const dateFilter = document.getElementById('historyDate').value;
            const classFilter = document.getElementById('historyClass').value;
            
            let filtered = [...appData.attendanceRecords].reverse();
            
            if (dateFilter) {
                filtered = filtered.filter(r => new Date(r.date).toISOString().split('T')[0] === dateFilter);
            }
            if (classFilter) {
                filtered = filtered.filter(r => r.class === classFilter);
            }

            const list = document.getElementById('historyList');
            if (filtered.length === 0) {
                list.innerHTML = '<p class="text-gray-400 text-center py-8">No attendance records found.</p>';
                return;
            }

            list.innerHTML = filtered.map(record => {
                const date = new Date(record.date);
                const percentage = ((record.presentCount / record.totalStudents) * 100).toFixed(1);
                
                return `
                    <div class="glass-dark rounded-xl p-4 group">
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                            <div class="flex-1">
                                <div class="flex items-center gap-3 mb-2 flex-wrap">
                                    <span class="text-lg font-semibold">${record.subject}</span>
                                    <span class="px-2 py-1 rounded-lg text-xs bg-indigo-500/20 text-indigo-300">${record.class}</span>
                                    <span class="px-2 py-1 rounded-lg text-xs bg-purple-500/20 text-purple-300">Hour ${record.hour || '-'}</span>
                                </div>
                                <p class="text-sm text-gray-400">
                                    <i class="fas fa-calendar mr-1"></i>${date.toLocaleDateString()}
                                    <span class="mx-2"></span>
                                    <i class="fas fa-clock mr-1"></i>${date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' })}
                                    <span class="mx-2"></span>
                                    <i class="fas fa-user mr-1"></i>${record.lecturer || 'N/A'}
                                </p>
                            </div>
                            <div class="flex items-center gap-6">
                                <div class="text-center">
                                    <span class="text-2xl font-bold text-green-400">${record.presentCount}</span>
                                    <p class="text-xs text-gray-400">Present</p>
                                </div>
                                <div class="text-center">
                                    <span class="text-2xl font-bold text-red-400">${record.absentCount}</span>
                                    <p class="text-xs text-gray-400">Absent</p>
                                </div>
                                <div class="w-16 h-16 rounded-full border-4 ${percentage >= 75 ? 'border-green-500' : 'border-red-500'} flex items-center justify-center">
                                    <span class="text-sm font-bold">${percentage}%</span>
                                </div>
                                <button onclick="deleteRecord(${record.id})" class="w-10 h-10 rounded-lg hover:bg-red-500/20 flex items-center justify-center text-red-400 opacity-0 group-hover:opacity-100 transition">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function deleteRecord(id) {
            if (confirm('Delete this record?')) {
                appData.attendanceRecords = appData.attendanceRecords.filter(r => r.id !== id);
                saveData();
                filterHistory();
                showToast('Record deleted');
            }
        }

        function clearHistory() {
            if (confirm('Clear ALL attendance history?')) {
                appData.attendanceRecords = [];
                saveData();
                filterHistory();
                showToast('History cleared');
            }
        }

        function clearAllData() {
            if (confirm(' This will DELETE ALL DATA including students, timetable, and history. Continue?')) {
                localStorage.removeItem('attendEaseData');
                appData = { students: [], classes: [], timetable: [], attendanceRecords: [], currentAttendance: {}, selectionMode: 'present' };
                updateUI();
                showToast('All data cleared');
            }
        }

        // Update UI
        function updateUI() {
            document.getElementById('totalStudents').textContent = appData.students.length;
            
            const today = new Date().toDateString();
            const todayRecords = appData.attendanceRecords.filter(r => new Date(r.date).toDateString() === today);
            
            let todayPresent = 0, todayAbsent = 0;
            todayRecords.forEach(r => {
                todayPresent += r.presentCount;
                todayAbsent += r.absentCount;
            });
            
            document.getElementById('todayPresent').textContent = todayPresent;
            document.getElementById('todayAbsent').textContent = todayAbsent;

            const days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
            const todayDay = days[new Date().getDay()];
            const todayClasses = appData.timetable.filter(c => c.day === todayDay);
            document.getElementById('totalClasses').textContent = todayClasses.length;

            updateCurrentClassCard(todayClasses);
            updateClassDropdowns();
            updateTimetableGrid();
        }

        function updateCurrentClassCard(todayClasses) {
            const card = document.getElementById('currentClassCard');
            if (todayClasses.length === 0) {
                card.innerHTML = '<p class="text-gray-400">No classes scheduled for today.</p>';
                return;
            }

            const now = new Date();
            const currentTime = now.getHours() * 60 + now.getMinutes();
            let currentClass = null, nextClass = null;

            for (const cls of todayClasses.sort((a, b) => (a.startTime || '').localeCompare(b.startTime || ''))) {
                if (!cls.startTime || !cls.endTime) continue;
                const [startH, startM] = cls.startTime.split(':').map(Number);
                const [endH, endM] = cls.endTime.split(':').map(Number);
                const startMin = startH * 60 + startM;
                const endMin = endH * 60 + endM;

                if (currentTime >= startMin && currentTime < endMin) {
                    currentClass = cls;
                    break;
                } else if (currentTime < startMin && !nextClass) {
                    nextClass = cls;
                }
            }

            const displayClass = currentClass || nextClass;
            if (!displayClass) {
                card.innerHTML = '<p class="text-gray-400">All classes completed for today.</p>';
                return;
            }

            card.innerHTML = `
                <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
                    <div>
                        <span class="px-3 py-1 rounded-full text-xs ${currentClass ? 'bg-green-500/20 text-green-400 pulse' : 'bg-yellow-500/20 text-yellow-400'} mb-3 inline-block">
                            ${currentClass ? ' LIVE NOW' : ' UP NEXT'}
                        </span>
                        <h3 class="text-2xl font-bold mb-2">${displayClass.subject}</h3>
                        <p class="text-gray-400">
                            <i class="fas fa-users mr-1"></i>${displayClass.name}
                            <span class="mx-2"></span>
                            <i class="fas fa-user mr-1"></i>${displayClass.lecturer}
                        </p>
                    </div>
                    <div class="text-left md:text-right">
                        <p class="text-3xl font-bold text-indigo-400">${displayClass.startTime || '--:--'}</p>
                        <p class="text-gray-400">to ${displayClass.endTime || '--:--'}</p>
                        <button onclick="showTab('attendance'); document.getElementById('attendanceClass').value='${displayClass.name}'; loadStudentsForAttendance();" 
                                class="mt-3 btn-gradient px-4 py-2 rounded-lg text-sm font-medium">
                            <i class="fas fa-user-check mr-2"></i>Take Attendance
                        </button>
                    </div>
                </div>
            `;
        }

        // Initialize
        loadData();
    </script>
</body>
</html>
